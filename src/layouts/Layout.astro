---
	import Header from '@components/Header.astro';
	import Footer from '@components/Footer.astro';
	
	import '@fontsource/work-sans/400.css';
	import '@fontsource/work-sans/500.css';
	import '@fontsource/work-sans/600.css';
	import '@fontsource/work-sans/700.css';
	
	import '../styles/global.css';

	interface Props {
		title?: string;
		description?: string;
	}

	const { title = "MetaBlog", description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="bg-light-background dark:bg-background-dark text-body dark:text-body-dark">
		<Header />
		<main class="w-full max-w-7xl mx-auto mt-24 px-4 md:px-6 lg:px-12 xl:px-0">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Work Sans', sans-serif;
		
		&::selection{
			background-color: var(--color-primary);
			color: var(--color-light-background);
		}
	}
</style>
